@model FitnessHub.Data.Entities.GymClasses.GymClass

@{
    ViewData["Title"] = "DeleteGymClass";
}

<div class="container detailsdelete-text">
    <h2 class="view-text" style="text-align: center; margin-bottom: 4vh; font-weight: bolder; margin-top: 3.5vh">Delete @Model.Category.Name</h2>
    <hr />
    <div class="row">
        <!-- Left: Class info -->
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Category)
                        </dt>
                        <dd class="col-sm-8">
                            @Model.Category.Name
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.DateStart)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.DateStart)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.DateEnd)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.DateEnd)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Capacity)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Capacity)
                        </dd>
                        <dt class="col-sm-4">
                            Clients
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Clients.Count)
                        </dd>
                    </dl>

                    <form asp-action="DeleteGymClass">
                        <input type="hidden" asp-for="Id" />
                        <button id="process" type="submit" class="btn btn-danger me-4">
                            <i class="fa-solid fa-trash-can me-2"></i>Delete
                        </button>
                        <a asp-action="GymClasses" class="btn btn-secondary">
                            <i class="fa-solid fa-chevron-left me-2"></i>Back to List
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.getElementById('process').addEventListener('click', function (event) {
            // Prevenir o envio imediato do formulário
            event.preventDefault();

            var submitButton = event.target;

            // Desabilitar o botão e mudar o texto
            submitButton.disabled = true;
            submitButton.innerHTML = '<i class="fa-solid fa-spinner spin-icon me-2"></i>Processing';

            // Submeter o formulário após a modificação
            submitButton.closest('form').submit();
        });
    });
</script>
